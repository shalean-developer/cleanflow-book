{
  "redirects": [
    {
      "source": "https://www.shalean.co.za/:path*",
      "destination": "https://shalean.co.za/:path*",
      "permanent": true,
      "statusCode": 301
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap.xml"
    },
    {
      "source": "/((?!robots\\.txt|favicon).*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
}

